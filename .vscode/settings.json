{
    "typescript.check.tscVersion": false,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.js": {"when": "$(basename).ts"},
        "**/*?.js": {"when": "$(basename).tsx"},
        "**/*.js.map": {"when": "$(basename)"}
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000
}